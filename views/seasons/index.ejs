<%- include('../shared/styles')%>
<%- include('../shared/searchbar')%>
<body>



  <div class="card" style="margin: 15px">

    <div class="card-body">
      <h2>Temporadas Breaking Bag</h2>

          <% seasons_bb.forEach(season => { %>
            <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#bb-season-<%= season.season_num %>">Season <%= season.season_num %></button>

            <!-- Div que se esconde con cada botón -->
            <div id="bb-season-<%= season.season_num %>" class="collapse">

              <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">Episode Number</th>
                    <th scope="col">Episode Title</th>
                  </tr>
                </thead>
                <tbody>
                  <% season.season_eps.forEach(ep => { %>
                  <tr onclick="window.location='/episodes/details?id=<%= ep.episode_id %>'" class="hover-mouse">
                    <th scope="row"><%= ep.episode %></th>
                    <td><%= ep.title %></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>

            </div>

          <% })%>
    </div>
  </div>

  <div class="card" style="margin: 15px">
    <div class="card-body">
      <h2>Temporadas Better Call Saul</h2>

          <% seasons_bcs.forEach(season => { %>
            <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#bcs-season-<%= season.season_num %>">Season <%= season.season_num %></button>

            <!-- Div que se esconde con cada botón -->
            <div id="bcs-season-<%= season.season_num %>" class="collapse">

              <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">Episode Number</th>
                    <th scope="col">Episode Title</th>
                  </tr>
                </thead>
                <tbody>
                  <% season.season_eps.forEach(ep => { %>
                  <tr onclick="window.location='/episodes/details?id=<%= ep.episode_id %>'">
                    <th scope="row"><%= ep.episode %></th>
                    <td><%= ep.title %></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>

            </div>

          <% })%>
    </div>
  </div>

  <!-- Script para abrir el elemento que llegue en el url -->
  <script type="text/javascript">
    const url = window.location.href;
    const splitted = url.split("=");
    // console.log('url', url);
    if (splitted.length === 2) {
      const id_season = splitted[1];
      console.log('id_season', id_season);
      var v = document.getElementById(id_season);
      v.classList.add("show");
    }
    // const season = <%= urlSeason %>;
    // console.log('url season', season);
  </script>

</body>
